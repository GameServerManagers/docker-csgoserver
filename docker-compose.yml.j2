version: "3.8"
services:
  # bind mount example
  linuxgsm-{{ game.shortname }}-bind:
    image: gameservermanagers/gameserver:{{ game.shortname }}
    # image: ghcr.io/gameservermanagers/gameserver:{{ game.shortname }}
    container_name: {{ game.shortname }}server
    restart: unless-stopped
    volumes:
      - /path/to/linuxgsm/{{ game.shortname }}server:/data
    network_mode: host

  # volume example
  linuxgsm-{{ game.shortname }}-volume:
    image: gameservermanagers/gameserver:{{ game.shortname }}
    # image: ghcr.io/gameservermanagers/gameserver:{{ game.shortname }}
    container_name: {{ game.shortname }}server
    restart: unless-stopped
    volumes:
      - linuxgsm-{{ game.shortname }}:/data
    network_mode: host

volumes:
  linuxgsm-{{ game.shortname }}:
